<h1><%= @topic.name %></h1>
<%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
<%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger', data: { confirm: 'Are you sure you want to delete this topic?'} %>


<div class="row">
    <div class="col-md-8">
        <p class="lead"><%= @topic.description %></p>
        <!-- repeat assigning 'posts' to '@topic', and display each post -->
        <% @topic.posts.each do |post| %>
            <div class="media">
                <div class="media-body">
                    <h4 class="media-heading">
                        <!-- refactor about how to link to individual posts using the 'topic_post_path' method -->
                        <!-- this method takes a 'topic' and a 'post' and generates a path to the posts 'show' view -->
                        <%= link_to post.title, topic_post_path(@topic, post) %>
                    </h4>
                    <!-- add submission and comment details for each post in the show view -->
                    <small>
                        submitted <%= time_ago_in_words(post.created_at) %> ago by <%= post.user.name %> <br>
                        <%= post.comments.count %> Comments
                    </small>
                </div>
            </div>
        <% end %>
   </div>
 </div>
<div>
       <!-- replace 'new_post_path' to 'new_topic_post_path' to reflect the nested route we generated in 'routes.rb' -->
       <%= link_to "New Post", new_topic_post_path(@topic), class: 'btn btn-success' %>
       <%= link_to "New Sponsoredpost", new_topic_sponsoredpost_path(@topic), class: 'btn btn-success' %>

</div>