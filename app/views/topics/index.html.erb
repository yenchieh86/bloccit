<h1>Topics</h1>
    <div class="row">
        <div class="col-md-8">
            <!-- loop over each element(topic) in '@topics' -->
            <%= render @topics %>
        </div>
        <!-- check if there is a sign-in 'current_user', and also check is that current_use is an 'admin' -->
        <% if user_is_authorized_for_topics? %>
            <div class="col-md-4">
                <!-- create a link to create a new topic -->
                <%= link_to "New Topic", new_topic_path, class: 'btn btn-success' %>
            </div>
        <% end %>
    </div>